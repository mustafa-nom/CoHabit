# CoHabit Backend Configuration Template
# Copy this file to 'application.properties' and update with your credentials

# Server Configuration
server.port=8080
server.servlet.context-path=/api

# Database Configuration
# Update these with your MySQL credentials
spring.datasource.url=jdbc:mysql://localhost:3306/cohabit_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
spring.datasource.username=YOUR_MYSQL_USERNAME
spring.datasource.password=YOUR_MYSQL_PASSWORD
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.format_sql=true

# CORS Configuration (for React Native)
spring.web.cors.allowed-origins=*
spring.web.cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
spring.web.cors.allowed-headers=*

# Logging
logging.level.org.springframework.web=INFO
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# JWT Configuration
# IMPORTANT: Change jwt.secret to a secure random string in production (minimum 64 characters)
# Generate using: openssl rand -base64 64
jwt.secret=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION_MINIMUM_64_CHARACTERS
jwt.expiration=86400000

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp application.properties.example application.properties
# 2. Edit application.properties with your actual credentials
# 3. Replace YOUR_MYSQL_USERNAME (usually 'root')
# 4. Replace YOUR_MYSQL_PASSWORD with your MySQL password
# 5. Generate a secure JWT secret:
#    - Linux/Mac: openssl rand -base64 64
#    - Windows: Use online generator or create random 64+ char string
# 6. application.properties is in .gitignore - never commit it!
